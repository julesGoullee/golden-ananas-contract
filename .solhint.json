{
  "extends": "solhint:default",
  "rules": {
    "indent": ["warn", 2],
    "max-line-length": ["warn", 135],

    "avoid-throw": "error",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",

    "compiler-fixed": "off",
    "no-simple-event-func-name": "off",
    "two-lines-top-level-separator": "off",
    "not-rely-on-time": "off"
  }
}
